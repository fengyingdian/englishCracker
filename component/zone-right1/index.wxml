<!--myComponents/courseInfo/index.wxml-->
<view class='w100-white'> 
  <view class="itemRow4" id="{{index}}" style='border-radius:5px;box-shadow:0px 0px 10px gainsboro;height:{{height}}px'>
    <view class="wl70" style='padding-left:20px'>
      <text class="textMid20" style='font-size:16px;font-weight:900'> {{name}} </text>
      <text class="textGreyFont12" style='padding-top:6px'> {{info}} </text>
    </view>
    <view class="w30">
      <image src="{{icon}}" style='border-radius:3px;width:40px;height:40px;border-radius:3px;align-content:left;'/>
    </view>
  </view>
</view>